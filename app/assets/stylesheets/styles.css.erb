h2,
h3,
p {
    margin: 0;
    font-size: 1.2em;
}


html,
body {
    height: 100%;
    margin: 0;
    padding: 0;

    background-repeat: no-repeat;
        background-color: #282b30;
}

body {
    display: inline;
        font-family: 'Droid Sans', sans-serif;
}


/* header */

.navbar ul {
    height: 63px;
    display: inline;
}

.navbar-brand {
    margin-top: -25px;
}

.navbar-inverse .container {
    padding-top: 10px;
}

.navbar-inverse {
    border: none;
    border-bottom: 1px solid #bbb;
    background: white;
}

.navbar li a {
    font-size: 1.2em;
    color: #999;
}

.navbar-inverse .navbar-nav> .active > a {
    background: none;
        color:#08c;
}

.navbar-inverse .navbar-nav> .active > a:hover {
    background: none;
        color:#08c;
}

.navbar-inverse .navbar-nav li a {
    transition: background-color, color ease-out .3s;
}

.navbar-inverse .navbar-nav li a:hover {
    color:#08c;
    transition: background-color, color ease-in .2s;
}
.navbar-toggle{background:black;}

/* body */


.wrap {
  background:url("<%= asset_path("stardust.png") %>") ;
    color: #FBFFD7;
    padding-top: 100px;
    min-height: 100%;
    margin-bottom: -5px;
    margin-top: -120px;
    padding-bottom: 30px;
    padding-left: 3%;
    padding-right: 3%;
}

.wrap h1 {
       color: #8bc2f2;
}

.wrap ul {
    padding: 0;
    list-style: none;
    width: max-content;
    width: -moz-max-content;
}

.wrap li {
    border: 1px solid #aaa;
    padding: 5px;
    padding-right: 8px;
    margin-top: 5px;
    border-radius: 2px;
    background: #DDE8F5;
    color:black;
}


input[type="submit"] {
    background: black;
}

.photoframe {
    border: 6px solid #FBFFD7;
    width: 20%;
    height: 20%;
    float: right;
    margin-top: 70px;
    margin-right: 10%;
    min-height: 100px;
    min-width: 100px;
    box-shadow: 5px 5px 10px rgba(64, 65, 72, .2);
    border-radius: 2px;
}

.gallery {
    margin-top: 20px;
}

.gallery a img {
    padding: 5px;
    width: 300px;
    height: 200px;
    float: left;
    border: 1px solid #bbb;
    margin: 5px;
    box-shadow: 5px 5px 10px rgba(64, 65, 72, .2);
    opacity: 0.85;
}

.gallery img:hover {
    border: 1px solid #6082B5;
    transition: border-color ease-in .2s;
    opacity: 1;
}

.gallery img {
    transition: border-color ease-out .3s;
}

form {
    height: 500px;
    width: 320px;
}

.container.index {
    padding: 0;
}

form label {
    padding: 3px;
}

form input {
    float: right;
        color:black;
}

form textarea {
    margin-top: 10px;
    width: 100%;
    color:black;
}
.contact a:hover{
  color:#8bc2f2;
}

.btn-primary {
    margin-top: 20px;
    float: right
}

.index h1 {
    background:url("<%= asset_path("3711_computerscience-banner-final.jpg") %>") ;
    padding: 100px;
    font-family: 'Monoton', sans-serif;
}

.index p,
.index h2 {
    padding-left: 3%;
}

.index p {
    background: #FBFFD7;
    padding-top: 5px;
    padding-bottom: 5px;
    color:black;
    margin-left:1px;
    margin-right:1px;
}

.bio p {
    padding-top: 5px;
}

.wrap .bio btn-primary a {
    color: white!important;
}

.bio h4 {
    padding-top: 5px;
    font-weight:bold;
}

/* footer */
.footer {
    border-top: 1px solid #0d2c40;
    border-width: 1px;
    position: relative;
    height: 31px;
    clear: both;
    background: white;

}
