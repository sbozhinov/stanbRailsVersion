h2,
h3,
p {
    margin: 0;
    font-size: 1.1em;
}

.wrap h1 {
       color: #8bc2f2;
    font-family: 'Droid Sans', sans-serif;
}

html,
body {
    height: 100%;
    margin: 0;
    padding: 0;
    background: #bbb;
    background: url("/assets/hexellence.png");
}

body {
    display: inline;
}


/* header */

.navbar ul {
    height: 63px;
    display: inline;
}

.navbar-brand {
    margin-top: -25px;
}

.navbar-inverse .container {
    padding-top: 10px;
}

.navbar-inverse {
    border: none;
    border-bottom: 1px solid #aaa;
    background: white;
}

.navbar li a {
    font-size: 1.2em;
    color: #999;
}

.navbar-inverse .navbar-nav> .active > a {
    background: none;
    color: #444;
}

.navbar-inverse .navbar-nav> .active > a:hover {
    background: none;
    color: #777;
}

.navbar-inverse .navbar-nav li a {
    transition: background-color, color ease-out .5s;
}

.navbar-inverse .navbar-nav li a:hover {
    color: #666;
    transition: background-color, color ease-in .2s;
}
.navbar-toggle{background:black;}
.wrap {
    background: #0d2c40;
    color: #FBFFD7;
    padding-top: 100px;
    min-height: 100%;
    margin-bottom: -5px;
    margin-top: -120px;
    padding-bottom: 30px;
    padding-left: 3%;
    padding-right: 3%;
    box-shadow: 0 0 5px #000;
}

.wrap ul {
    padding: 0;
    list-style: none;
    width: max-content;
    width: -moz-max-content;
}

.wrap li {
    border: 1px solid #aaa;
    padding: 5px;
    padding-right: 8px;
    margin-top: 5px;
    border-radius: 2px;
    background: #DDE8F5;
    color:black;
}

.footer {
    border-top: 1px solid #555;
    border-width: 1px;
    position: relative;
    height: 31px;
    background: #222;
    clear: both;
    background: white;
    /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
}

input[type="submit"] {
    background: black;
}

.photoframe {
    border: 6px solid #FBFFD7;
    width: 20%;
    height: 20%;
    float: right;
    margin-top: 50px;
    margin-right: 10%;
    min-height: 100px;
    min-width: 100px;
    box-shadow: 5px 5px 10px rgba(64, 65, 72, .2);
    border-radius: 2px;
}

.gallery {
    margin-top: 20px;
}

.gallery a img {
    padding: 5px;
    width: 300px;
    height: 200px;
    float: left;
    border: 5px solid #bbb;
    margin: 5px;
    box-shadow: 5px 5px 10px rgba(64, 65, 72, .2);
    opacity: 0.85;
}

.gallery img:hover {
    border: 5px solid #6082B5;
    transition: border-color ease-in .2s;
    opacity: 1;
}

.gallery img {
    transition: border-color ease-out .3s;
}

